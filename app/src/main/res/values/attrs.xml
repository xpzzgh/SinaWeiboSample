<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MultiImageViewGroup">
        <attr name="width_per_image" format="dimension" />
        <attr name="width_image_gap" format="dimension" />
        <attr name="width_max" format="dimension" />
        <attr name="height_image_fixed" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AvatarImageBehavior">
        <attr name="finalYPosition" format="dimension"/>
        <attr name="startXPosition" format="dimension"/>
        <attr name="startToolbarPosition" format="dimension"/>
        <attr name="startHeight" format="dimension"/>
        <attr name="finalHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="InfoListView">
        <attr name="childSimpleTextHeight" format="dimension" />
        <attr name="childSimpleTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CommentItemView">
        <attr name="itemType" format="enum">
            <enum name="relay" value="1" />
            <enum name="comment" value="2" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="PointProgressBar">
        <attr name="pointWidth" format="dimension" />
        <attr name="pointGapWidth" format="dimension" />
    </declare-styleable>

</resources>