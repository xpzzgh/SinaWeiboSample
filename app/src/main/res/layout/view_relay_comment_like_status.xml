<?xml version="1.0" encoding="utf-8"?>
<com.example.pz.sinaweibosample.view.widget.BottomOperateTabView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLightGray"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/view_button_relay"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/image_relay_status"
                        android:layout_width="30dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_relay" />
                    <TextView
                        android:id="@+id/text_number_relay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dp"
                        android:text="转发"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="24dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorLightGray"/>

            <RelativeLayout
                android:id="@+id/view_button_comment"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/image_comment_status"
                        android:layout_width="30dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_comment" />
                    <TextView
                        android:id="@+id/text_number_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dp"
                        android:text="评价"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="24dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorLightGray"/>
            <RelativeLayout
                android:id="@+id/view_button_like"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/image_like_status"
                        android:layout_width="30dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_like"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/text_number_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dp"
                        android:text="点赞"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


</com.example.pz.sinaweibosample.view.widget.BottomOperateTabView>