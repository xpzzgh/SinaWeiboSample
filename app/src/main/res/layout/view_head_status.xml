<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_status_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFont"
        android:maxLength="20"
        android:textSize="14dp"
        android:layout_alignTop="@+id/image_status_head"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@+id/image_status_head"/>


    <TextView
        android:id="@+id/text_status_time_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignLeft="@+id/text_status_author"
        android:paddingLeft="5dp"
        android:paddingRight="8dp"
        android:layout_below="@+id/text_status_author"
        android:textColor="@color/colorDeepOrange"/>

    <TextView
        android:id="@+id/text_from_fix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来自"
        android:textSize="10sp"
        android:layout_below="@+id/text_status_author"
        android:layout_toRightOf="@+id/text_status_time_ago"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/text_client_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@+id/text_status_author"
        android:layout_toRightOf="@+id/text_from_fix"/>

    <ImageView
        android:id="@+id/image_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_no_follow"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/image_status_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/image_v_status_head"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignBottom="@+id/image_status_head"
        android:layout_alignRight="@+id/image_status_head"
        android:background="@drawable/ic_circle"
        android:padding="1dp"/>
</RelativeLayout>