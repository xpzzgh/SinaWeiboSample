<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.pz.sinaweibosample.view.widget.FixedViewPager
        android:id="@+id/view_pager_image_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.pz.sinaweibosample.view.widget.FixedViewPager>

    <com.example.pz.sinaweibosample.view.widget.PointProgressBar
        android:id="@+id/progressbar_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="30dp"
        app:pointWidth="5dp"
        app:pointGapWidth="10dp">
    </com.example.pz.sinaweibosample.view.widget.PointProgressBar>

</FrameLayout>