<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay">
    <android.support.v7.widget.Toolbar
        android:id="@+id/view_toolbar_post_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/AppTheme.PopupOverlay">

    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/edit_text_post_status"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:hint="分享新鲜事..."
        android:gravity="top"
        android:background="@null"
        android:maxLines="7"
        android:textColor="@color/colorFont"
        android:layout_margin="15dp"
        android:focusableInTouchMode="true"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_keyboard_icon_tab"
        android:background="@color/colorVeryLightGray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_keyboard_icon_tab"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_notify_post_status"
                android:layout_height="@dimen/height_keyboard_icon_tab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="\@"
                android:textSize="20sp"
                android:textColor="@color/colorGray"/>
            <Button
                android:id="@+id/button_topic_post_status"
                android:layout_height="@dimen/height_keyboard_icon_tab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_toRightOf="@+id/button_notify_post_status"
                android:text="#"
                android:textSize="22sp"
                android:textColor="@color/colorGray"/>
            <ImageView
                android:id="@+id/image_emoji_post_status"
                android:layout_height="@dimen/height_keyboard_icon_tab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:src="@drawable/ic_emoji"
                android:padding="10dp"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/image_image_post_status"
                android:layout_height="@dimen/height_keyboard_icon_tab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:src="@drawable/ic_image"
                android:padding="7dp"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/image_plus_post_status"
                android:layout_height="@dimen/height_keyboard_icon_tab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:src="@drawable/ic_plus"
                android:padding="10dp"
                android:clickable="true"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>